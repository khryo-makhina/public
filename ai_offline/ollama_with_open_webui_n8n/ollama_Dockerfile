# Use the base image for Ollama
FROM ollama/ollama:latest

# Set the working directory inside the container
WORKDIR /app

# Update CA certificates
RUN apt-get update && apt-get install -y ca-certificates tzdata && update-ca-certificates

# Install NVIDIA libraries (if not already included in the base image)
RUN apt-get update && apt-get install -y --no-install-recommends \
    nvidia-cuda-toolkit \
    && rm -rf /var/lib/apt/lists/*

# Copy the entrypoint script into the container
COPY ollama_entrypoint.sh /app/ollama_entrypoint.sh

# Make the entrypoint script executable
RUN chmod +x /app/ollama_entrypoint.sh

# Expose the required port
EXPOSE 11434

# Set the entrypoint to the script
ENTRYPOINT ["/app/ollama_entrypoint.sh"]